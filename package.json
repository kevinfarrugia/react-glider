{
  "name": "react-glider",
  "version": "3.0.0",
  "description": "A ReactJS wrapper for glider.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": {
    "name": "Andrew Lisowski",
    "email": "lisowski54@gmail.com"
  },
  "files": [
    "dist",
    "glider.defaults.css"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/hipstersmoothie/react-glider"
  },
  "license": "MIT",
  "scripts": {
    "lint": "tslint -p . --format stylish",
    "build": "tsc",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "deploy-storybook": "storybook-to-ghpages",
    "prerelease": "npm run build",
    "release": "auto shipit"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@storybook/addon-actions": "^5.3.21",
    "@storybook/addon-knobs": "^5.3.21",
    "@storybook/addon-notes": "^5.3.19",
    "@storybook/addon-storysource": "^5.3.21",
    "@storybook/react": "^5.3.21",
    "@storybook/storybook-deployer": "2.8.1",
    "@types/jest": "23.3.11",
    "@types/lodash.times": "^4.3.4",
    "auto": "^10.3.0",
    "auto-config-hipstersmoothie": "^4.0.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-core": "6.26.3",
    "babel-loader": "8.0.4",
    "husky": "1.3.1",
    "jest": "23.6.0",
    "lint-staged": "8.1.0",
    "lodash.times": "^4.3.2",
    "prettier": "^2.0.5",
    "react": "^17.0.2",
    "react-docgen-typescript-webpack-plugin": "1.1.0",
    "react-dom": "^17.0.2",
    "ts-jest": "23.10.5",
    "tslint": "5.12.0",
    "tslint-config-prettier": "1.17.0",
    "tslint-xo": "0.11.0",
    "typescript": "^3.9.3",
    "typescript-tslint-plugin": "0.2.1",
    "webpack": "4.28.3"
  },
  "prettier": {
    "singleQuote": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverage": true,
    "coverageDirectory": "./coverage",
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "html"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/*.d.ts",
      "**/*.{ts,tsx}"
    ],
    "transform": {
      ".+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.+(ts|tsx|js)"
    ],
    "globals": {
      "test-jest": {
        "tsConfig": "tsconfig.json"
      }
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "dependencies": {
    "@reach/auto-id": "^0.16.0",
    "glider-js": "1.7.7"
  },
  "storybook-deployer": {
    "gitUsername": "hipstersmoothie",
    "gitEmail": "lisowski54@gmail.com",
    "commitMessage": "Deploy Storybook [skip ci]"
  },
  "auto": {
    "extends": "hipstersmoothie"
  }
}
