{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-xo/space"
  ],
  "rules": {
    "interface-name": false,
    "ordered-imports": false,
    "object-curly-spacing": false,
    "variable-name": false,
    // React doc-gen comments
    "no-single-line-block-comment": false,
    // React default props dont get loaded into docgen
    "no-redundant-jsdoc": false,
    // I like when react render methods come last
    "member-ordering": false,
    // Allow double quote only in jsx
    "quotemark": [
      true,
      "single",
      "avoid-escape",
      "jsx-double",
      "avoid-template"
    ]
  }
}
